*,
*:before,
*:after
  box-sizing: border-box;
  margin: 0;
  padding: 0;

.container 
  width: 90%;
  max-width: 70rem;
  margin: 0 auto;
:root
  font-size: 10px;
body
  background-color: #f2f2f2;
  font-family: sans-serif;
  
header
  animation: headerSlideDown 800ms;
  color: #f2f2f2;
  display: flex;
  font-family: 'Lato', sans-serif;
  align-items: center;
  justify-content: space-between;
  padding: 16px;
  position: fixed;
  transition: all 400ms;
  width: 99vw;
  &.header-bg 
    background-color: #222;
  h1
    font-size: 3.5rem;
    font-weight: 500;
  nav li
    list-style: none;
    display: inline-block;
    a 
      color: #f2f2f2;
      font-family: 'Lato', sans-serif;
      font-size: 1.8rem;
      font-weight: lighter;
      margin-left 30px;
      text-decoration: none;
      transition: all 300ms;
      &:hover 
        border-bottom: 1px solid #f2994a;
#hero
  background: url('bg.png') center center no-repeat;
  background-attachment: fixed;
  background-size: cover;
  color: #f2f2f2;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  #hero-box
    text-align: center;
    h2 
      animation: taglineSlideOver 1400ms ease-out;
      font-size: 4rem;
      margin-bottom: 5px;
    h3 
      animation: taglineSlideUp 1700ms ease-out;
      font-size: 3.5rem;
      text-decoration: underline;

#intro
  padding: 35px 0;
  h2 
    color: #222222;
    font-size: 3.2rem;
    margin-bottom: 10px;
  p 
    color: #333;
    font-size: 2.3rem;
    line-height: 40px;

.lesson 
  h3 
    color: #333;
    font-size: 3rem;
    margin-bottom: 10px;
  h4
    color: #343434;
    font-size: 2.8rem;
    margin-bottom: 7px;
  p 
    font-size: 2.3rem;
    line-height: 40px;
    color: #444;
    margin-bottom: 15px;
  em 
    color: #111;
    text-decoration: underline;
  ul
    padding-left: 25px;
    margin-bottom: 20px;
  li 
    color: #333;
    font-size: 2.5rem;
    margin-bottom: 10px;

#outro
  padding: 35px 0;
  h3
    color: #222222;
    font-size: 3.2rem;
    margin-bottom: 10px;
  p 
    color: #333;
    font-size: 2.3rem;
    line-height: 40px;
@keyframes headerSlideDown
  from 
    transform: translateY(-70px);
  to
    transform: none;

@keyframes taglineSlideUp 
  from 
    opacity: 0;
    transform: translateY(50vh);
  to 
    opacity: 1;
    transform: none;
  
@keyframes taglineSlideOver 
  from 
    opacity: 0;
    transform: translateX(-50vw);
  to
    opacity: 1;
    transform: none;

pre.prettyprint,
code.prettyprint  
  width: 95%;
  margin: 1em auto;
  padding: 1em;
  white-space: pre-wrap;
  border-radius: 4px;
  font-family:'Anonymous Pro';
  font-weight: normal;
  font-size: 18px;
  line-height: 2.15rem;
  margin-bottom: 15px;
  padding: 20px 30px;
  background-color: #222;
  display: block;
  .pln
    color: #f2f2f2;
  .pun
    color: #8B890;
  .lit 
    color: #F12D2D;
  .typ 
    color: #4C27BF;
  .com
    color: #63f46c;
  .kwd
    color: #87DFD6;
  .str
    color: #f2994a;

@media (max-width: 500px)
  #intro
    h2
      font-size: 24px;
    p 
      font-size: 20px;
      line-height: 35px;
  .lesson 
    h3 
      font-size: 24px;
    h4 
      font-size: 22px;
    p 
      font-size: 20px;
      line-height: 30px;
    ul li 
      font-size: 20px;
  #outro
    h3 
      font-size: 24px;
    p 
      font-size: 20px;
      line-height: 30px;
      
  pre.prettyprint, 
  code.prettyprint 
    font-size: 16px;